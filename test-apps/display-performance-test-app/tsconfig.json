{
  "extends": "./node_modules/@itwin/build-tools/tsconfig-base.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "outDir": "./lib",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "./src/backend/**/*.ts"
  ]
}
