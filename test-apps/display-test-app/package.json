{
  "name": "display-test-app",
  "description": "Internal app for testing features of display system",
  "license": "UNLICENSED",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "version": "1.8.0",
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || ^22.0.0"
  },
  "private": true,
  "scripts": {
    "build": "npm run -s build:frontend-vite && npm run -s build:backend",
    "build:stats": "cross-env OUTPUT_STATS=TRUE npm run build",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:backend-webpack": "backend-webpack-tools build -s ./lib/backend/DtaElectronMain.js -o ./lib/build/",
    "build:frontend": "tsc",
    "build:frontend-vite": "cross-env NODE_OPTIONS=--max_old_space_size=8192 vite build",
    "build:bundle": "npm run build:frontend-vite && npm run build:backend-webpack",
    "clean": "rimraf build lib .static-assets .rush/temp/package-deps*.json ios/imodeljs-test-app/build android/imodeljs-test-app/app/build android/imodeljs-test-app/app/src/main/assets",
    "docs": "",
    "lint": "eslint \"./src/**/*.ts\" 1>&2",
    "lint-fix": "eslint --fix -f visualstudio \"./src/**/*.ts\" 1>&2",
    "start": "cross-env NODE_ENV=development run-p start:webserver start:electron",
    "start:electron": "electron ./lib/backend/DtaElectronMain.js --inspect --remote-debugging-port=9223",
    "start:electron-webpack": "electron ./lib/build/DtaElectronMain.js --trace-warnings --enable-logging --inspect --remote-debugging-port=9223",
    "start:webserver": "cross-env NODE_ENV=development vite",
    "start:mobile": "cross-env NODE_ENV=development vite --host",
    "start:backend": "node --max-http-header-size=16000 lib/backend/WebMain.js",
    "start:servers": "run-p \"start:webserver\" \"start:backend\"",
    "test": "",
    "cover": "",
    "copy:config": "internal-tools copy-config",
    "build:mobile": "npm run -s build:mobile-frontend && npm run -s build:mobile-backend && npm run -s build:mobile-env-json",
    "build:mobile-frontend": "cross-env PUBLIC_URL=./ npm run -s build:frontend-vite",
    "build:mobile-backend": "npm run -s build:backend && webpack --config ./mobile_backend.config --env outdir=./lib/mobile --env entry=./lib/backend/MobileMain.js --env bundlename=main",
    "build:mobile-env-json": "node ./scripts/buildEnvJson.mjs",
    "build:ios-app": "cd ios/imodeljs-test-app && xcrun xcodebuild -derivedDataPath ./build/DerivedData build CODE_SIGN_STYLE=Manual CODE_SIGN_IDENTITY= CODE_SIGNING_REQUIRED=NO PROVISIONING_PROFILE_SPECIFIER= -scheme imodeljs-test-app -arch x86_64 -sdk iphonesimulator -configuration Debug",
    "ios": "node ./scripts/runIosSimulator.mjs",
    "ios:all": "npm run build:mobile && npm run build:ios-app && npm run ios",
    "build:android-app": "cd android/imodeljs-test-app && ./gradlew --no-daemon build",
    "android": "./scripts/runAndroidEmulator.py",
    "android:all": "npm run build:mobile && npm run android"
  },
  "repository": {},
  "dependencies": {
    "@bentley/icons-generic": "^1.0.34",
    "@bentley/icons-generic-webfont": "^1.0.34",
    "@itwin/appui-abstract": "workspace:*",
    "@itwin/browser-authorization": "^1.0.1",
    "@itwin/core-backend": "workspace:*",
    "@itwin/core-bentley": "workspace:*",
    "@itwin/core-common": "workspace:*",
    "@itwin/core-electron": "workspace:*",
    "@itwin/core-frontend": "workspace:*",
    "@itwin/core-geometry": "workspace:*",
    "@itwin/core-i18n": "workspace:*",
    "@itwin/core-markup": "workspace:*",
    "@itwin/core-mobile": "workspace:*",
    "@itwin/core-quantity": "workspace:*",
    "@itwin/editor-backend": "workspace:*",
    "@itwin/editor-common": "workspace:*",
    "@itwin/editor-frontend": "workspace:*",
    "@itwin/electron-authorization": "^0.19.5",
    "@itwin/frontend-devtools": "workspace:*",
    "@itwin/frontend-tiles": "workspace:*",
    "@itwin/hypermodeling-frontend": "workspace:*",
    "@itwin/imodels-access-backend": "^5.2.1",
    "@itwin/imodels-access-frontend": "^5.2.1",
    "@itwin/imodels-client-authoring": "^5.8.1",
    "@itwin/imodels-client-management": "^5.8.1",
    "@itwin/map-layers-formats": "workspace:*",
    "@itwin/object-storage-core": "^2.2.5",
    "@itwin/reality-data-client": "^1.2.1",
    "@itwin/webgl-compatibility": "workspace:*",
    "body-parser": "^1.20.3",
    "vhacd-js": "^0.0.1"
  },
  "devDependencies": {
    "@itwin/backend-webpack-tools": "workspace:*",
    "@itwin/build-tools": "workspace:*",
    "@itwin/core-webpack-tools": "workspace:*",
    "@itwin/eslint-plugin": "5.0.0-dev.1",
    "@types/express": "^4.17.20",
    "@types/express-ws": "^3.0.3",
    "@types/fs-extra": "^4.0.7",
    "@types/node": "~18.16.20",
    "@typescript-eslint/parser": "~8.11.0",
    "browserslist-to-esbuild": "^1.2.0",
    "child_process": "^1.0.2",
    "cpx2": "^3.0.0",
    "cross-env": "^5.1.4",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^5.1.0",
    "electron": "^33.0.0",
    "eslint": "^9.13.0",
    "express": "^4.20.0",
    "express-ws": "^5.0.2",
    "fs-extra": "^8.1.0",
    "internal-tools": "workspace:*",
    "node-simctl": "~7.6.1",
    "npm-run-all": "^4.1.5",
    "null-loader": "^4.0.1",
    "react": "^18.0.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-ignore": "^1.0.10",
    "rollup-plugin-visualizer": "^5.9.2",
    "rollup-plugin-webpack-stats": "^0.2.0",
    "rollup-plugin-external-globals": "0.11.0",
    "typescript": "~5.6.2",
    "vite": "^5.4.6",
    "vite-plugin-env-compatible": "^2.0.1",
    "vite-plugin-inspect": "^0.8.4",
    "webpack": "^5.76.0"
  },
  "browserslist": [
    "last 4 chrome version",
    "last 4 firefox version",
    "last 4 safari version",
    "last 4 ios version",
    "last 4 ChromeAndroid version",
    "last 4 edge version",
    "not dead",
    "not <0.2%"
  ]
}