{
  "name": "display-test-app",
  "description": "Internal app for testing features of display system",
  "license": "UNLICENSED",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "version": "0.0.0",
  "engines": {
    "node": "8.9.1"
  },
  "private": true,
  "scripts": {
    "build": "tsc 1>&2 && npm run copy:frontendpublic && npm run copy:ourpublic && npm run copy:modules && npm run makeconfig && npm run webpack:main",
    "clean": "rimraf lib package-deps.json",
    "copy:frontendpublic": "cpx \"../../core/frontend/src/public/**/*\" ./lib/webresources",
    "copy:ourpublic": "cpx \"public/**/*\" ./lib/webresources",
    "copy:modules": "node ./node_modules/@bentley/webpack-tools/modules/copyExternalModules.js --packageFile=./package.json --destDir=./lib/webresources --type=dev",
    "copy:modulesprod": "node ./node_modules/@bentley/webpack-tools/modules/copyExternalModules.js --packageFile=./package.json --destDir=./lib/webresources --type=prod",
    "makeconfig": "node ./node_modules/@bentley/config-loader/scripts/write.js ./lib/webresources/config.json ^imjs_",
    "docs": "",
    "lint": "tslint --project . 1>&2",
    "mobile": "tsc 1>&2 && webpack --config mobile.backend.webpack.config.js 1>&2 && webpack --config mobile.frontend.webpack.config.js 1>&2 && cpx \"public/**/*\" ./lib/mobile/public && cpx \"assets/**/*\" ./lib/mobile/assets ",
    "start": "npm run start:electron",
    "start:electron": "electron ./lib/backend/ElectronMain.js",
    "start:webserver": "node ./node_modules/@bentley/imodeljs-webserver/lib/webserver.js --port=3000 --resources=./lib/webresources/",
    "start:backend": "node lib/backend/WebMain.js",
    "start:servers": "run-p \"start:webserver\" \"start:backend\"",
    "test": "",
    "cover": "",
    "webpack:main": "webpack --config ./node_modules/@bentley/webpack-tools/modules/webpackModule.config.js --env.outdir=./lib/webresources --env.entry=./lib/frontend/SimpleViewTest.js --env.bundlename=main"
  },
  "repository": {},
  "dependencies": {
    "@bentley/bentleyjs-core": "0.173.0",
    "@bentley/geometry-core": "0.173.0",
    "@bentley/imodeljs-clients": "0.173.0",
    "@bentley/imodeljs-common": "0.173.0",
    "@bentley/imodeljs-i18n": "0.173.0",
    "@bentley/imodeljs-quantity": "0.173.0",
    "@bentley/imodeljs-frontend": "0.173.0",
    "@bentley/imodeljs-backend": "0.173.0",
    "body-parser": "^1.18.2",
    "tooltip.js": "^1.2.0"
  },
  "devDependencies": {
    "@bentley/config-loader": "0.173.0",
    "@bentley/build-tools": "0.173.0",
    "@bentley/webpack-tools": "0.173.0",
    "@bentley/imodeljs-webserver": "0.173.0",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.11.1",
    "@types/node": "10.10.3",
    "cpx": "^1.5.0",
    "child_process": "^1.0.2",
    "electron": "^2.0.8",
    "express": "^4.16.3",
    "node-glob": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "null-loader": "^0.1.1",
    "popper.js": "^1.14.4",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.3",
    "tslint": "^5.11.0",
    "typescript": "~3.1.0",
    "webpack": "^4.20.2"
  },
  "homepage": "http://localhost:3000/"
}