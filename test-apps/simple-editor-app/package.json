    "@bentley/ui-framework": "2.0.0-dev.15",
    "classnames": "^2.2.5",
    "cpx": "^1.5.0",
    "lorem-ipsum": "^2.0.3",
    "mobx": "^5.8.0",
    "mobx-react": "^5.4.3",
    "react": "^16.8.0",
    "react-compound-slider": "^1.2.0",
    "react-dom": "^16.8.0",
    "redux": "^4.0.3",
    "semver": "^5.5.0",
    "svg-sprite-loader": "^3.8.0"
  },
  "proxy": "http://localhost:5000"
}
