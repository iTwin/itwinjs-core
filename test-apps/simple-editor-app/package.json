{
  "name": "simple-editor-app",
  "description": "UI Test Application",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "build": "cpx ./src/backend/web/BackendServer.config.json ./lib/backend/web && node ./node_modules/@bentley/webpack-tools/bin/buildIModelJsModule",
    "lint": "tslint -p . 1>&2",
    "electron": "electron ./lib/backend/main.js",
    "start:webserver": "node ./node_modules/@bentley/imodeljs-webserver/lib/WebServer.js --port=3000 --resources=./lib/webresources/",
    "start:backend": "node --max-http-header-size=16000 lib/backend/main.js",
    "start:pluginserver": "node ./node_modules/@bentley/imodeljs-webserver/lib/WebServer.js --port=4000 --resources=./lib/pluginserver/",
    "start:servers": "run-p \"start:webserver\" \"start:backend\"",
    "start:threeservers": "run-p \"start:webserver\" \"start:backend\" \"start:pluginserver\"",
    "clean": "rimraf lib .rush dist package-deps.json",
    "test": "",
    "cover": "",
    "docs": ""
  },
  "iModelJs": {
    "buildModule": {
      "type": "application",
      "sourceResources": [
        {
          "source": "./src/**/*.scss",
          "dest": "./lib"
        },
        {
          "source": "./src/**/*.svg",
          "dest": "./lib"
        },
        {
          "source": "./public/**/*",
          "dest": "./lib/webresources"
        },
        {
          "source": "./src/**/*.js",
          "dest": "./lib"
        }
      ],
      "webpack": {
        "dest": "./lib/webresources",
        "entry": "./lib/frontend/index.js",
        "bundleName": "main",
        "styleSheets": true,
        "htmlTemplate": "./src/frontend/index.html"
      },
      "makeConfig": {
        "dest": "./lib/webresources/config.json",
        "filter": "^imjs_"
      },
      "pseudoLocalize": {
        "source": "./lib/webresources/locales/en",
        "dest": "./lib/webresources/locales/en-PSEUDO"
      }
    }
  },
  "repository": {},
  "keywords": [
    "Bentley",
    "BIM",
    "iModel"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "//devDependencies": [
    "NOTE: All tools used by scripts in this package must be listed as devDependencies"
  ],
  "devDependencies": {
    "@bentley/config-loader": "2.0.0-dev.15",
    "@bentley/logger-config": "2.0.0-dev.15",
    "@bentley/webpack-tools": "2.0.0-dev.15",
    "@bentley/build-tools": "2.0.0-dev.15",
    "@bentley/imodeljs-markup": "2.0.0-dev.15",
    "@bentley/imodeljs-webserver": "2.0.0-dev.15",
    "@bentley/icons-generic-webfont": "^1.0.0",
    "@bentley/icons-generic": "^1.0.0",
    "@types/classnames": "^2.2.3",
    "@types/lorem-ipsum": "^1.0.2",
    "@types/node": "10.14.1",
    "@types/react": "^16.8.0",
    "@types/react-dom": "^16.8.0",
    "@types/react-redux": "^7.0.1",
    "@types/semver": "^5.5.0",
    "electron": "^6.1.5",
    "electron-chromedriver": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "react-async-hook": "3.6.1",
    "rimraf": "^2.6.2",
    "svg-baker-runtime": "^1.4.2",
    "tslint": "^5.11.0",
    "tslint-etc": "^1.5.2",
    "typescript": "~3.7.4",
    "webpack": "^4.20.2"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "2.0.0-dev.15",
    "@bentley/electron-manager": "2.0.0-dev.15",
    "@bentley/express-server": "2.0.0-dev.15",
    "@bentley/geometry-core": "2.0.0-dev.15",
    "@bentley/imodeljs-clients": "2.0.0-dev.15",
    "@bentley/imodeljs-clients-backend": "2.0.0-dev.15",
    "@bentley/imodeljs-common": "2.0.0-dev.15",
    "@bentley/imodeljs-i18n": "2.0.0-dev.15",
    "@bentley/imodeljs-frontend": "2.0.0-dev.15",
    "@bentley/imodeljs-markup": "2.0.0-dev.15",
    "@bentley/imodeljs-quantity": "2.0.0-dev.15",
    "@bentley/imodeljs-backend": "2.0.0-dev.15",
    "@bentley/presentation-backend": "2.0.0-dev.15",
    "@bentley/presentation-common": "2.0.0-dev.15",
    "@bentley/presentation-components": "2.0.0-dev.15",
    "@bentley/presentation-frontend": "2.0.0-dev.15",
    "@bentley/ui-abstract": "2.0.0-dev.15",
    "@bentley/ui-core": "2.0.0-dev.15",
