{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "inlineSources": false,
    "incremental": false,
    "rootDir": "./src",
    "outDir": "." // We want the files to be accessible within a directory at the root alongside the scripts directory
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
