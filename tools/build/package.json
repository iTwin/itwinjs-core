    "tslint": "^5.11.0",
    "tslint-consistent-codestyle": "^1.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-etc": "^1.5.2",
    "tsutils": "^3.6.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-external-module-name": "2.0.0",
    "typedoc-plugin-internal-external": "2.0.2",
    "typescript": "~3.6.2",
