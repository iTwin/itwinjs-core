{
  "name": "example-code-snippets",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "azurite:setup": "mkdirp ./lib/cjs/test/azuriteStorage && azurite-blob --silent --loose --location ./lib/test/azuriteStorage",
    "build": "tsc 1>&2",
    "clean": "rimraf lib .rush/temp/package-deps*.json ../../generated-docs",
    "copy:assets": "cpx \"./src/backend/assets/**/*\" ./lib/backend/assets",
    "extract": "betools extract --fileExt=ts --extractFrom=./src --recursive --out=../../generated-docs/extract",
    "docs": "npm run -s copy:assets && npm run -s extract",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "test": "npm run -s test:azurite",
    "test:backend": "npm run -s copy:assets &&  mocha --no-config",
    "test:azurite": "run-p -r azurite:setup test:backend",
    "cover": "npm -s test"
  },
  "repository": {},
  "dependencies": {
    "@azure/storage-blob": "^12.7.0",
    "@itwin/core-backend": "workspace:*",
    "@itwin/core-bentley": "workspace:*",
    "@itwin/core-common": "workspace:*",
    "@itwin/core-extension": "workspace:*",
    "@itwin/core-frontend": "workspace:*",
    "@itwin/core-geometry": "workspace:*",
    "@itwin/ecschema-editing": "workspace:*",
    "@itwin/ecschema-locaters": "workspace:*",
    "@itwin/ecschema-metadata": "workspace:*",
    "@itwin/imodel-transformer": "^0.4.2",
    "@itwin/itwins-client": "^1.2.0",
    "@itwin/service-authorization": "^1.0.0",
    "@xmldom/xmldom": "~0.8.5",
    "azurite": "^3.29.0",
    "fs-extra": "^8.1.0"
  },
  "devDependencies": {
    "@itwin/build-tools": "workspace:*",
    "@itwin/eslint-plugin": "^4.0.2",
    "@itwin/oidc-signin-tool": "~3.6.0",
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "^7",
    "@types/fs-extra": "^4.0.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "~18.16.20",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "cpx2": "^3.0.0",
    "eslint": "^8.56.0",
    "mkdirp": "^1.0.4",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "~5.3.3"
  },
  "mocha": {
    "exit": true,
    "colors": true,
    "check-leaks": true,
    "spec": [
      "lib/**/*.test.js"
    ],
    "require": "source-map-support/register",
    "reporter": "node_modules/@itwin/build-tools/mocha-reporter",
    "reporter-options": "mochaFile=lib/test/junit_results.xml",
    "timeout": 999999
  }
}