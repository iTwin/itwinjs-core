<ECSchema schemaName="RatioUnits" alias="RTU" version="01.00.01" description="Units for testing ratio formatting" displayLabel="Ratio Units"
    xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.3">
    <ECSchemaReference name="Units" version="01.00.09" alias="u"/>
    <Unit typeName="DECIMAL_LENGTH_RATIO" phenomenon="u:LENGTH_RATIO" unitSystem="u:INTERNATIONAL" definition="u:ONE" displayLabel="decimal length ratio" description="Unit suitable for storing a decimal number that represents a length ratio." />
    <Unit typeName="M_PER_M_LENGTH_RATIO" phenomenon="u:LENGTH_RATIO" unitSystem="u:SI" definition="u:M*u:M(-1)" displayLabel="m/m" />
    <Unit typeName="IN_PER_FT_LENGTH_RATIO" phenomenon="u:LENGTH_RATIO" unitSystem="u:USCUSTOM" definition="u:IN*u:FT(-1)" displayLabel="in/ft" />
    <Format typeName="DrawingScaleFactor_SI" type="Ratio" ratioType="OneToN" ratioFormatType="Decimal" precision="1" formatTraits="TrailZeroes">
        <Composite>
            <Unit>u:M</Unit>
            <Unit>u:M</Unit>
        </Composite>
    </Format>
    <Format typeName="DrawingScaleFactor_USCUSTOM" type="Ratio" ratioType="NToOne" ratioSeparator="=" ratioFormatType="Fractional" precision="16" formatTraits="TrailZeroes|ShowUnitLabel">
        <Composite>
            <Unit label='"'>u:IN</Unit>
            <Unit label="'">u:FT</Unit>
        </Composite>
    </Format>
    <KindOfQuantity typeName="SCALE_FACTOR" persistenceUnit="M_PER_M_LENGTH_RATIO" presentationUnits="DrawingScaleFactor_SI;DrawingScaleFactor_USCUSTOM" relativeError="0.000001"/>
</ECSchema>
