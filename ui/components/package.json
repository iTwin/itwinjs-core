  ],
  "dependencies": {
    "@bentley/icons-generic-webfont": "^0.0.9",
    "callable-instance2": "1.0.0",
    "classnames": "^2.2.5",
    "eventemitter2": "^5.0.1",
    "inspire-tree": "^5.0.1",
