    "react-virtualized": "^9.21.0",
    "resize-observer-polyfill": "^1.5.0",
    "ts-key-enum": "^2.0.0"
  },
  "nyc": {
    "extends": "./node_modules/@bentley/build-tools/.nycrc",
    "require": [
      "ignore-styles",
      "jsdom-global/register",
      "source-map-support/register",
      "ts-node/register"
    ]
  }
}
