{
  "$schema": "../../../presentation/common/Ruleset.schema.json",
  "id": "ui-framework/Categories",
  "rules": [
    {
      "ruleType": "RootNodes",
      "specifications": [
        {
          "specType": "InstanceNodesOfSpecificClasses",
          "classes": [
            {
              "schemaName": "BisCore",
              "classNames": [
                "Category"
              ]
            }
          ],
          "arePolymorphic": true,
          "groupByClass": false,
          "groupByLabel": false,
          "nestedRules": [
            {
              "ruleType": "ChildNodes",
              "condition": "ParentNode.ECInstance.GetRelatedInstancesCount(\"BisCore:CategoryOwnsSubCategories\", \"Forward\", \"BisCore:SubCategory\") > 1",
              "specifications": [
                {
                  "specType": "RelatedInstanceNodes",
                  "relationships": {
                    "schemaName": "BisCore",
                    "classNames": [
                      "CategoryOwnsSubCategories"
                    ]
                  },
                  "relatedClasses": {
                    "schemaName": "BisCore",
                    "classNames": [
                      "SubCategory"
                    ]
                  },
                  "requiredDirection": "Forward",
                  "groupByClass": false,
                  "groupByLabel": false
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "ruleType": "LabelOverride",
      "condition": "this.IsOfClass(\"Category\", \"BisCore\")",
      "description": "this.Description"
    }
  ]
}
