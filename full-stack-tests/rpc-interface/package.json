    "@itwin/presentation-backend": "workspace:*",
    "@itwin/projects-client": "^0.6.0",
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "^7",
    "@types/mocha": "^8.2.2",
    "@types/node": "16.11.59",
    "assert": "^2.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "cpx2": "^3.0.0",
    "eslint": "^7.11.0",
    "internal-tools": "workspace:*",
    "npm-run-all": "^4.1.5",
    "null-loader": "^4.0.1",
    "path-browserify": "^1.0.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^4.0.0",
    "stream-browserify": "^3.0.0",
    "typescript": "~4.4.0",
    "webpack": "^5.64.4",
