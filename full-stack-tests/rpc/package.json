  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc 1>&2",
    "build:ci": "npm run -s build && npm run -s webpack:test",
    "clean": "rimraf lib .rush/temp/package-deps*.json coverage",
    "cover": "npm -s test",
    "docs": "",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "test": "npm run -s test:chrome && npm run -s test:electron",
    "test:chrome": "certa -r chrome -b ./lib/backend/http.js",
    "test:electron": "certa -r electron -b ./lib/backend/electron.js",
    "test:direct": "certa -r node -b ./lib/backend/direct.js",
    "webpack:test": "webpack --config webpack.config.js 1>&2"
  },
  "repository": {},
  "dependencies": {
    "@itwin/core-backend": "workspace:*",
    "@itwin/core-bentley": "workspace:*",
    "@itwin/core-common": "workspace:*",
    "@itwin/core-electron": "workspace:*",
    "@itwin/core-frontend": "workspace:*",
    "@itwin/core-mobile": "workspace:*",
    "@itwin/express-server": "workspace:*",
    "electron": "^14.0.0",
    "express": "^4.16.3",
    "semver": "^5.5.0",
    "spdy": "^4.0.1"
  },
  "devDependencies": {
    "@itwin/build-tools": "workspace:*",
    "@itwin/certa": "workspace:*",
    "@itwin/eslint-plugin": "workspace:*",
    "@types/chai": "^4.1.4",
    "@types/express": "^4.16.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.14.31",
    "@types/semver": "^5.5.0",
    "@types/spdy": "^3.4.4",
    "chai": "^4.1.2",
    "eslint": "^7.11.0",
    "glob": "^7.1.2",
    "null-loader": "^0.1.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.0.0",
    "typescript": "~4.4.0",
    "webpack": "4.42.0",
    "webpack-cli": "^3.1.0"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended"
  }
}
