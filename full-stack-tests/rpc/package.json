    "@types/node": "10.14.1",
    "@types/semver": "^5.5.0",
    "@types/spdy": "^3.4.4",
    "chai": "^4.1.2",
    "eslint": "^6.8.0",
    "glob": "^7.1.2",
    "null-loader": "^0.1.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.0.0",
    "typescript": "~3.7.4",
    "webpack": "4.42.0"
  },
  "eslintConfig": {
    "plugins": [
      "@bentley"
