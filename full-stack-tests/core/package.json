{
  "name": "core-full-stack-tests",
  "//private": "NOTE: this is a private package that is never published",
  "private": true,
  "license": "MIT",
  "scripts": {
    "compile": "npm run build",
    "copy:config": "internal-tools copy-config",
    "build": "npm run build:tests && npm run build:extensions",
    "build:tests": "tsc 1>&2 && npm run webpack:frontend",
    "build:extensions": "npm run build:loadingTestExtension",
    "build:loadingTestExtension": "extension-webpack-tools build -s ./src/common/extensions/loadingTestExtension/loadingTestExtension.ts -o ./lib/imjs_extensions/loadingTestExtension --sourceMap",
    "clean": "rimraf lib .rush/temp/package-deps*.json coverage",
    "cover": "npm run test",
    "docs": "",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "test": "npm run test:chrome && npm run test:electron",
    "test:chrome": "certa -r chrome --grep \"#integration\" --invert",
    "test:electron": "certa -r electron --grep \"#integration\" --invert",
    "test:integration": "npm run test:integration:chrome && npm run test:integration:electron",
    "test:integration:chrome": "certa -r chrome --grep \"#integration\"",
    "test:integration:electron": "certa -r electron --grep \"#integration\"",
    "webpack:frontend": "webpack --config webpack.config.js 1>&2"
  },
  "repository": {},
  "dependencies": {
    "@bentley/backend-itwin-client": "workspace:*",
    "@bentley/bentleyjs-core": "workspace:*",
    "@bentley/express-server": "workspace:*",
    "@bentley/geometry-core": "workspace:*",
    "@bentley/hypermodeling-frontend": "workspace:*",
    "@bentley/imodelhub-client": "workspace:*",
    "@bentley/imodeljs-backend": "workspace:*",
    "@bentley/itwin-client": "workspace:*",
    "@bentley/imodeljs-common": "workspace:*",
    "@bentley/imodeljs-editor-backend": "workspace:*",
    "@bentley/imodeljs-editor-frontend": "workspace:*",
    "@bentley/imodeljs-editor-common": "workspace:*",
    "@bentley/imodeljs-frontend": "workspace:*",
    "@bentley/imodeljs-i18n": "workspace:*",
    "@bentley/imodeljs-markup": "workspace:*",
    "@bentley/electron-manager": "workspace:*",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "fs-extra": "^8.1.0",
    "electron": "^11.1.0"
  },
  "devDependencies": {
    "@bentley/build-tools": "workspace:*",
    "@bentley/eslint-plugin": "workspace:*",
    "@bentley/certa": "workspace:*",
    "@bentley/context-registry-client": "workspace:*",
    "@bentley/frontend-authorization-client": "workspace:*",
    "@bentley/oidc-signin-tool": "workspace:*",
    "@bentley/product-settings-client": "workspace:*",
    "@bentley/extension-webpack-tools": "workspace:*",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7",
    "@types/fs-extra": "^4.0.7",
    "@types/mocha": "^8.2.2",
    "@types/node": "10.14.1",
    "@types/serve-handler": "~6.1.0",
    "chai": "^4.1.2",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "glob": "^7.1.2",
    "istanbul-instrumenter-loader": "^3.0.1",
    "internal-tools": "workspace:*",
    "null-loader": "^0.1.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.0.0",
    "eslint": "^7.11.0",
    "typescript": "~4.3.0",
    "nyc": "^15.1.0",
    "webpack": "4.42.0",
    "webpack-core": "0.6.9",
