{
  "name": "core-full-stack-tests",
  "//private": "NOTE: this is a private package that is never published",
  "private": true,
  "license": "MIT",
  "scripts": {
    "compile": "npm run -s build",
    "copy:config": "internal-tools copy-config",
    "build": "tsc 1>&2 && npm run -s webpack:frontend",
    "clean": "rimraf lib .rush/temp/package-deps*.json coverage",
    "cover": "npm run -s test",
    "docs": "",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "test": "npm run -s test:chrome && npm run -s test:electron",
    "test:chrome": "certa -r chrome --grep \"#integration\" --invert",
    "test:electron": "certa -r electron --grep \"#integration\" --invert",
    "test:integration": "npm run -s test:integration:chrome && npm run -s test:integration:electron",
    "test:integration:chrome": "certa -r chrome --grep \"#integration\"",
    "test:integration:electron": "certa -r electron --grep \"#integration\"",
    "webpack:frontend": "webpack --config webpack.config.js 1>&2"
  },
  "repository": {},
  "dependencies": {
    "@bentley/backend-itwin-client": "workspace:*",
    "@itwin/core-bentley": "workspace:*",
    "@itwin/express-server": "workspace:*",
    "@itwin/core-geometry": "workspace:*",
    "@itwin/hypermodeling-frontend": "workspace:*",
    "@bentley/imodelhub-client": "workspace:*",
    "@itwin/core-backend": "workspace:*",
    "@bentley/itwin-client": "workspace:*",
    "@itwin/core-common": "workspace:*",
    "@itwin/editor-backend": "workspace:*",
    "@itwin/editor-frontend": "workspace:*",
    "@itwin/editor-common": "workspace:*",
    "@itwin/core-frontend": "workspace:*",
    "@itwin/core-i18n": "workspace:*",
    "@itwin/core-markup": "workspace:*",
    "@itwin/core-electron": "workspace:*",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "fs-extra": "^8.1.0",
    "electron": "^14.0.0"
  },
  "devDependencies": {
    "@itwin/build-tools": "workspace:*",
    "@itwin/eslint-plugin": "workspace:*",
    "@itwin/certa": "workspace:*",
    "@bentley/context-registry-client": "workspace:*",
    "@bentley/frontend-authorization-client": "workspace:*",
    "@itwin/oidc-signin-tool": "workspace:*",
    "@bentley/product-settings-client": "workspace:*",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7",
    "@types/fs-extra": "^4.0.7",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.14.31",
    "@types/serve-handler": "~6.1.0",
    "chai": "^4.1.2",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "glob": "^7.1.2",
    "istanbul-instrumenter-loader": "^3.0.1",
    "internal-tools": "workspace:*",
    "null-loader": "^0.1.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.0.0",
    "eslint": "^7.11.0",
    "typescript": "~4.4.0",
    "nyc": "^15.1.0",
    "webpack": "4.42.0",
    "webpack-cli": "^3.1.0",
    "webpack-core": "0.6.9",
    "serve-handler": "^6.1.2"
  },
  "nyc": {
    "extends": "./node_modules/@itwin/build-tools/.nycrc"
  },
