{
  "name": "@bentley/ecjs",
  "version": "0.8.0",
  "description": "ECObjects core concepts in typescript",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "typings": "lib/index",
  "repository": {
    "type": "git",
    "url": "http://tfs.bentley.com/tfs/ProductLine/Platform%20Technology/_git/ec-js"
  },
  "scripts": {
    "clean": "rimraf lib .nyc_output",
    "lint": "tslint --project . 1>&2",
    "prebuild": "npm run lint & npm run clean",
    "build": "tsc",
    "test": "betools test-tsnode --testDir=./test/ --tscPaths",
    "test:watch": "betools test-tsnode --testDir=./test/ --watch",
    "docs": "betools docs --onlyJson --json=./lib/docs/json/ec-js/file.json",
    "docs:dev": "npm run docs && bmsWatch --source ./lib/docs --destination public --typeDocSource C:/dev/imodeljs/ecobjects-js/source",
    "cover": "nyc node ./node_modules/@bentley/bentleyjs-tools/scripts/test-tsnode.js --testDir=./test/ --tscPaths",
    "start": "npm run build && npm run test"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "EC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@bentley/bemetalsmith": "^2.5.26",
    "@bentley/bentleyjs-tools": "^5.1.0",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.3",
    "@types/sinon": "^5.0.1",
    "chai-as-promised": "^7.1.1",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "sinon": "^6.0.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.9.2",
    "@types/glob": "^5.0.35"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "^8.6.0"
  },
  "nyc": {
    "include": [
      "source/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov",
      "cobertura"
    ],
    "report-dir": "./lib/test/coverage"
  }
}
