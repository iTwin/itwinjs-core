    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.11.1",
    "typescript": "~3.2.2"
  },
  "dependencies": {
    "glob": "^7.1.2",
    "bunyan": "^1.8.12",
