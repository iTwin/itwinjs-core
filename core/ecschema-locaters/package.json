{
  "name": "@bentley/ecschema-locaters",
  "version": "2.16.0-dev.3",
  "description": "EC Schema file locaters",
  "license": "MIT",
  "main": "lib/ecschema-locaters.js",
  "typings": "lib/ecschema-locaters",
  "repository": {
    "type": "git",
    "url": "https://github.com/imodeljs/imodeljs/tree/master/core/ecschema-locaters"
  },
  "scripts": {
    "compile": "npm run build",
    "build": "tsc 1>&2",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "extract-api": "betools extract-api --entry=ecschema-locaters",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "test": "betools test-tsnode --testDir=./test/",
    "docs": "betools docs --includes=../../generated-docs/extract --json=../../generated-docs/core/ecschema-locaters/file.json --tsIndexFile=./ecschema-locaters.ts --onlyJson",
    "cover": "nyc npm test",
    "start": "npm run lint && npm run clean && npm run build && npm run test & npm run cover & npm run docs"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModel.js",
    "EC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@bentley/build-tools": "2.16.0-dev.3",
    "@bentley/ecschema-metadata": "2.16.0-dev.3",
    "@bentley/eslint-plugin": "2.16.0-dev.3",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7",
    "@types/glob": "^5.0.35",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.14.1",
    "@types/sinon": "^9.0.0",
    "@types/xmldom": "^0.1.30",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "eslint": "^6.8.0",
    "mocha": "^5.2.0",
    "nyc": "^14.0.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.1.0",
    "xmldom": "^0.5.0"
  },
  "dependencies": {
    "glob": "^7.1.2"
  },
  "peerDependencies": {
    "@bentley/ecschema-metadata": "^2.16.0-dev.3"
  },
  "nyc": {
    "nycrc-path": "./node_modules/@bentley/build-tools/.nycrc",
    "sourceMap": false
  },
  "eslintConfig": {
    "plugins": [
      "@bentley"
    ],
    "extends": "plugin:@bentley/imodeljs-recommended",
    "rules": {
      "radix": "warn"
    }
  }
}
