{
  "name": "@itwin/express-server",
  "version": "5.0.0-dev.103",
  "description": "iTwin.js express utilities",
  "main": "lib/cjs/ExpressServer.js",
  "module": "lib/esm/ExpressServer.js",
  "typings": "lib/cjs/ExpressServer",
  "license": "MIT",
  "engines": {
    "node": "^20.0.0 || ^22.0.0"
  },
  "scripts": {
    "build": "npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "build:esm": "tsc 1>&2 --module ES2022 --outDir lib/esm",
    "clean": "rimraf -g lib .rush/temp/package-deps*.json",
    "docs": "betools docs --json=../../generated-docs/core/express-server/file.json --tsIndexFile=./ExpressServer.ts --onlyJson",
    "extract-api": "betools extract-api --entry=ExpressServer",
    "lint": "eslint \"./src/**/*.ts\" 1>&2",
    "test": "mocha",
    "cover": "nyc npm -s test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/itwinjs-core.git",
    "directory": "core/express-server"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel",
    "iTwin",
    "iTwin.js"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@itwin/build-tools": "workspace:*",
    "@itwin/core-common": "workspace:*",
    "@itwin/core-backend": "workspace:*",
    "@itwin/eslint-plugin": "5.0.0-dev.1",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "4.3.1",
    "@types/express": "^4.17.20",
    "@types/mocha": "^10.0.6",
    "@types/node": "~20.17.0",
    "@types/sinon": "^17.0.2",
    "@types/supertest": "^6.0.2",
    "@types/express-ws": "^3.0.3",
    "chai": "^4.3.10",
    "eslint": "^9.13.0",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "sinon": "^17.0.2",
    "supertest": "^7.0.0",
    "typescript": "~5.6.2"
  },
  "peerDependencies": {
    "@itwin/core-backend": "workspace:*",
    "@itwin/core-common": "workspace:*"
  },
  "dependencies": {
    "express": "^4.21.2",
    "express-ws": "^5.0.2"
  },
  "nyc": {
    "extends": "./node_modules/@itwin/build-tools/.nycrc"
  }
}
