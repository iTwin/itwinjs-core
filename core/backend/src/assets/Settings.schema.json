{
  "$id": "http://itwinjs.org/json-schema/settings",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "schema for iTwin settings",
  "description": "base schema for iTwin.js settings",
  "type": "object",
  "properties": {
    "groupName": {
      "type": "string",
      "description": "the name for a group of settings"
    },
    "order": {
      "type": "integer",
      "minimum": 0,
      "description": "for sorting settings groups in an editor"
    },
    "extensionId": {
      "type": "string",
      "description": "the name of the extension for these settings"
    }
  },
  "required": [
    "groupName"
  ]
}