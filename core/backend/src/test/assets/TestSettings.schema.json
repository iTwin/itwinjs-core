{
  "$id": "app1 schema",
  "$schema": "./../../assets/Settings.schema.json",
  "title": "app1 settings",
  "description": "the settings for test application 1",
  "type": "object",
  "groupName": "app1",
  "order": 7,
  "properties": {
    "app1/list/multiSelectModifier": {
      "type": "string",
      "enum": [
        "ctrlCmd",
        "alt"
      ],
      "enumDescriptions": [
        "ctrl key.",
        "alt key."
      ],
      "default": "ctrlCmd",
      "description": "multiSelectModifier"
    },
    "app1/list/openMode": {
      "type": "string",
      "enum": [
        "singleClick",
        "doubleClick"
      ],
      "default": "singleClick",
      "description": "openModeModifier"
    },
    "app1/list/horizontalScrolling": {
      "type": "boolean",
      "default": false,
      "description": "horizontalScrolling setting"
    },
    "app1/tree/indent": {
      "type": "number",
      "default": 8,
      "minimum": 0,
      "maximum": 40,
      "description": "tree indent setting"
    },
    "app1/tree/blah": {
      "type": "string",
      "default": "blah default",
      "description": "the setting for blah"
    },
    "workspace/container/alias": {
      "type": "array",
      "description": "array of workspace container aliases",
      "items": {
        "type": "object",
        "required": [
          "name",
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "the id of the workspace container"
          },
          "name": {
            "type": "string",
            "description": "the name of the workspace container"
          }
        }
      },
      "fontList": {
        "type": "array",
        "description": "array of fonts to load",
        "items": {
          "type": "object",
          "required": [
            "container",
            "fontName"
          ],
          "properties": {
            "container": {
              "type": "string",
              "description": "resource container name"
            },
            "fontName": {
              "type": "string",
              "description": "name of font within resource container"
            }
          }
        }
      }
    }
  }
}