    "copy:test-assets": "cpx \"./src/test/assets/**/*\" ./lib/cjs/test/assets",
    "docs": "betools docs --includes=../../generated-docs/extract --json=../../generated-docs/core/imodeljs-orbitgt/file.json --tsIndexFile=./imodeljs-orbitgt.ts --onlyJson",
