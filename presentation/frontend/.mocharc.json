{
  "require": [
    "source-map-support/register",
    "jsdom-global/register",
    "./lib/cjs/test/setup.js"
  ],
  "checkLeaks": true,
  "timeout": 60000,
  "spec": [
    "lib/cjs/test/**/*.test.js"
  ],
  "exclude": [
    "lib/cjs/test/coverage/**/*"
  ],
  "reporter": [
    "node_modules/@itwin/build-tools/mocha-reporter"
  ],
  "reporterOptions": [
    "mochaFile=lib/test/junit_results.xml"
  ]
}