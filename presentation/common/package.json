{
  "name": "@bentley/presentation-common",
  "version": "0.5.1",
  "description": "Common pieces for iModelJs presentation packages",
  "keywords": [
    "Bentley",
    "EC",
    "Presentation",
    "iModelJS"
  ],
  "license": "UNLICENSED",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/index.js",
  "typings": "lib/index",
  "scripts": {
    "build": "tsc -p ./src 1>&2 && npm run ruleset-json-schema && npm run extract",
    "clean": "rimraf lib package-deps.json",
    "cover": "cross-env TS_NODE_PROJECT=./tests/tsconfig.json nyc npm test -- --reporter mocha-tldr-reporter",
    "docs": "npm run docs:reference && npm run docs:changelog",
    "docs:changelog": "cpx ./CHANGELOG.md ../../generated-docs/presentation/common",
    "docs:reference": "node ./node_modules/@bentley/bentleyjs-tools/scripts/docs.js --source=./src --includes=../../generated-docs/extract --json=../../generated-docs/presentation/common/json/file.json --tsIndexFile=index.ts --onlyJson %TYPEDOC_THEME%",
    "extract": "node ./node_modules/@bentley/bentleyjs-tools/scripts/extract.js --fileExt=ts --extractFrom=./tests --recursive --out=../../generated-docs/extract",
    "ruleset-json-schema": "npm run ruleset-json-schema:generate && npm run ruleset-json-schema:post-process",
    "ruleset-json-schema:generate": "typescript-json-schema --noExtraProps --required --strictNullChecks ./src/tsconfig.json Ruleset > ./Ruleset.schema.json",
    "ruleset-json-schema:post-process": "node ./scripts/post-process-json-schema.js --path ./Ruleset.schema.json",
    "lint": "tslint -p ./src",
    "test": "cross-env TS_NODE_PROJECT=./tests/tsconfig.json mocha -r ts-node/register -r tsconfig-paths/register -r source-map-support/register --check-leaks --full-trace --timeout 60000 --file ./tests/index.test.ts tests/**/*.ts",
    "watch": "npm test -- --reporter min --watch-extensions ts --watch"
  },
  "peerDependencies": {
    "@bentley/bentleyjs-core": "0.112.0",
    "@bentley/imodeljs-common": "0.112.0"
  },
  "devDependencies": {
    "@bentley/bentleyjs-tools": "0.112.0",
    "@bentley/bentleyjs-core": "0.112.0",
    "@bentley/imodeljs-common": "0.112.0",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7",
    "@types/chai-jest-snapshot": "^1.3.0",
    "@types/chai-spies": "^0",
    "@types/deep-equal": "^1",
    "@types/faker": "^4.1.0",
    "@types/mocha": "^2.2.48",
    "@types/source-map-support": "^0.4.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "chai-jest-snapshot": "^1.3.0",
    "chai-spies": "1.0.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.4",
    "deep-equal": "^1",
    "faker": "^4.1.0",
    "mocha": "^5.2.0",
    "mocha-tldr-reporter": "^1.0.0",
    "nyc": "^11.8.0",
    "rimraf": "^2.6.2",
    "ts-node": "^6.0.3",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.10.1",
    "tslint-consistent-codestyle": "^1.11.0",
    "typedoc": "^0.11.1",
    "typedoc-plugin-external-module-name": "^1.1.1",
    "typemoq": "^2.1.0",
    "typescript": "~2.9.1",
    "typescript-json-schema": "^0.28.0"
  },
  "nyc": {
    "nycrc-path": "../.nycrc"
  }
}
