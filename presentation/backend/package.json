{
  "name": "@bentley/presentation-backend",
  "version": "2.0.0-dev.27",
  "description": "Backend of iModel.js Presentation library",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imodeljs/imodeljs/tree/master/presentation/backend"
  },
  "keywords": [
    "Bentley",
    "EC",
    "Presentation",
    "iModelJS",
    "Backend"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/presentation-backend.js",
  "typings": "lib/presentation-backend",
  "scripts": {
    "build": "tsc 1>&2 && npm run build:assets && node ./node_modules/@bentley/build-tools/scripts/ignoreargs.js 1>&2",
    "build:assets": "cpx \"./assets/**/*\" ./lib/assets",
    "build:watch": "npm run build:assets && tsc -w",
    "clean": "rimraf lib .rush package-deps.json",
    "cover": "nyc npm test",
    "docs": "npm run docs:reference && npm run extract && npm run docs:changelog",
    "docs:changelog": "cpx \"./CHANGELOG.md\" ../../generated-docs/presentation/presentation-backend",
    "docs:reference": "node ./node_modules/@bentley/build-tools/scripts/docs.js --includes=../../generated-docs/extract --json=../../generated-docs/presentation/presentation-backend/file.json --tsIndexFile=presentation-backend.ts --onlyJson %TYPEDOC_THEME%",
    "extract": "node ./node_modules/@bentley/build-tools/scripts/extract.js --fileExt=ts --extractFrom=./src/test --recursive --out=../../generated-docs/extract",
    "extract-api": "node ./node_modules/@bentley/build-tools/scripts/extract-api.js --entry=presentation-backend",
    "lint": "npm run tslint && npm run eslint",
    "eslint": "eslint src --ext .ts,.js",
    "tslint": "tslint --project . 1>&2",
    "test": "mocha --opts ../mocha.opts \"./lib/test/**/*.test.js\"",
    "test:watch": "npm test -- --reporter min --watch-extensions ts --watch"
  },
  "peerDependencies": {
    "@bentley/bentleyjs-core": "^2.0.0-dev.27",
    "@bentley/imodeljs-common": "^2.0.0-dev.27",
    "@bentley/imodeljs-backend": "^2.0.0-dev.27",
    "@bentley/presentation-common": "^2.0.0-dev.27"
  },
  "devDependencies": {
    "@bentley/bentleyjs-core": "2.0.0-dev.27",
    "@bentley/build-tools": "2.0.0-dev.27",
    "@bentley/imodeljs-common": "2.0.0-dev.27",
    "@bentley/imodeljs-backend": "2.0.0-dev.27",
    "@bentley/presentation-common": "2.0.0-dev.27",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7",
    "@types/chai-jest-snapshot": "^1.3.0",
    "@types/deep-equal": "^1",
    "@types/faker": "^4.1.0",
    "@types/lolex": "^2.1.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.14.1",
    "@types/object-hash": "^1.3.0",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.0",
    "@typescript-eslint/parser": "^2.10.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "chai-jest-snapshot": "^2.0.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.4",
    "deep-equal": "^1",
    "eslint": "^6.7.2",
    "eslint-plugin-react-hooks": "^2.3.0",
    "faker": "^4.1.0",
    "lolex": "^2.7.1",
    "mocha": "^5.2.0",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.2.0",
    "tslint": "^5.11.0",
    "tslint-etc": "^1.5.2",
    "typemoq": "^2.1.0",
    "typescript": "~3.7.4"
  },
  "dependencies": {
    "object-hash": "^1.3.1"
  },
  "nyc": {
    "extends": "./node_modules/@bentley/build-tools/.nycrc",
    "check-coverage": true,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "lines": 100
  }
}
