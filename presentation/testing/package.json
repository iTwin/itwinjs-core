{
  "name": "@bentley/presentation-testing",
  "version": "1.1.0-dev.4",
  "description": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imodeljs/imodeljs"
  },
  "keywords": [
    "Bentley",
    "Presentation",
    "iModelJS",
    "Testing"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/presentation-testing.js",
  "typings": "lib/presentation-testing",
  "scripts": {
    "build": "npm run extract && tsc -b ./src/test && node ./node_modules/@bentley/build-tools/scripts/ignoreargs.js 1>&2",
    "build:watch": "tsc -b ./src/test -w",
    "clean": "rimraf lib package-deps.json",
    "cover": "nyc npm test",
    "docs": "npm run docs:reference && npm run docs:changelog",
    "docs:changelog": "cpx \"./CHANGELOG.md\" ../../generated-docs/presentation/presentation-testing",
    "docs:reference": "node ./node_modules/@bentley/build-tools/scripts/docs.js --source=./src --includes=../../generated-docs/extract --json=../../generated-docs/presentation/presentation-testing/json/file.json --tsIndexFile=presentation-testing.ts --onlyJson %TYPEDOC_THEME%",
    "extract": "node ./node_modules/@bentley/build-tools/scripts/extract.js --fileExt=ts --extractFrom=./src/test --recursive --out=../../generated-docs/extract",
    "extract-api": "node ./node_modules/@bentley/build-tools/scripts/extract-api.js --entry=presentation-testing --isPresentation",
    "lint": "tslint -p ./src 1>&2",
    "test": "mocha -r ignore-styles -r jsdom-global/register --opts ../mocha.opts \"./lib/test/**/*.test.js\""
  },
  "devDependencies": {
    "ignore-styles": "^5.0.1",
    "cpx": "^1.5.0"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "1.1.0-dev.4",
    "@bentley/build-tools": "1.1.0-dev.4",
    "@bentley/imodeljs-backend": "1.1.0-dev.4",
    "@bentley/imodeljs-common": "1.1.0-dev.4",
    "@bentley/imodeljs-frontend": "1.1.0-dev.4",
    "@bentley/presentation-backend": "1.1.0-dev.4",
    "@bentley/presentation-common": "1.1.0-dev.4",
    "@bentley/presentation-components": "1.1.0-dev.4",
    "@bentley/presentation-frontend": "1.1.0-dev.4",
    "@bentley/ui-components": "1.1.0-dev.4",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7",
    "@types/chai-jest-snapshot": "^1.3.0",
    "@types/jsdom": "^12.2.0",
    "@types/mocha": "^5.2.5",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^5.0.5",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "chai-jest-snapshot": "^2.0.0",
    "cross-env": "^5.1.4",
    "jsdom-global": "3.0.2",
    "make-dir": "^1.3.0",
    "mocha": "^5.2.0",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "tslint": "^5.11.0",
    "tslint-etc": "^1.5.2",
    "typemoq": "^2.1.0",
    "typescript": "~3.2.2"
  },
  "nyc": {
    "extends": "./node_modules/@bentley/build-tools/.nycrc",
    "check-coverage": true,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "lines": 100
  }
}
