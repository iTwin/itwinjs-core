    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "baseUrl": "./node_modules",
    "outDir": "./lib",
    "jsx": "react",
    "types": [
      "@bentley/extension-webpack-tools",
      "mocha"
    ]
  },
