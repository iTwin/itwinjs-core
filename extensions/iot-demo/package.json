{
  "name": "iot-demo",
  "version": "1.0.0",
  "description": "IoT Demonstration",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "npm run build",
    "prebuild": "npm run pseudolocalize && npm run copy:assets",
    "build": "npm run prebuild && extension-webpack-tools build -s ./src/iotDemo.ts -o ./lib/extension",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "copy:assets": "cpx \"./src/public/**/*\" ./lib/extension/",
    "cover": "",
    "docs": "",
    "lint": "eslint -f visualstudio --max-warnings 0 ./src/**/*.ts 1>&2",
    "pseudolocalize": "betools pseudolocalize --englishDir=./src/public/locales/en --out=./lib/extension/locales/en-PSEUDO",
    "test": ""
  },
  "keywords": [
    "iModel",
    "BIM",
    "iot",
    "extension"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@bentley/build-tools": "2.10.0-dev.18",
    "@bentley/eslint-plugin": "2.10.0-dev.18",
    "@bentley/extension-webpack-tools": "2.10.0-dev.18",
    "@types/react": "16.9.43",
    "@types/classnames": "^2.2.3",
    "cpx": "^1.5.0",
    "eslint": "^6.8.0",
    "rimraf": "^3.0.2",
    "typescript": "~3.7.4"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "2.10.0-dev.18",
    "@bentley/geometry-core": "2.10.0-dev.18",
    "@bentley/itwin-client": "2.10.0-dev.18",
    "@bentley/imodeljs-common": "2.10.0-dev.18",
    "@bentley/imodeljs-i18n": "2.10.0-dev.18",
    "@bentley/imodeljs-frontend": "2.10.0-dev.18",
    "@bentley/imodeljs-quantity": "2.10.0-dev.18",
    "@bentley/ui-abstract": "2.10.0-dev.18",
    "@bentley/ui-components": "2.10.0-dev.18",
    "@bentley/ui-core": "2.10.0-dev.18",
    "@bentley/ui-framework": "2.10.0-dev.18",
    "@bentley/ui-ninezone": "2.10.0-dev.18",
    "classnames": "^2.2.5",
    "react": "^16.8.0",
    "svg-sprite-loader": "4.2.1"
  },
  "eslintConfig": {
    "plugins": [
      "@bentley"
    ],
    "extends": "plugin:@bentley/imodeljs-recommended"
  }
}
