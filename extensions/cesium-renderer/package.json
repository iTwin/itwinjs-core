{
  "name": "@itwin/cesium-renderer",
  "version": "5.2.0-dev.26",
  "description": "Alternative CesiumJS-based renderer for iTwin.js",
  "main": "lib/cjs/cesium-renderer.js",
  "module": "lib/esm/cesium-renderer.js",
  "typings": "lib/cjs/cesium-renderer",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "copy:cesium-assets": "cpx \"./node_modules/cesium/Build/Cesium/ThirdParty/**/*\" ./lib/public/cesium/ThirdParty/ && cpx \"./node_modules/cesium/Build/Cesium/Workers/**/*\" ./lib/public/cesium/Workers/ && cpx \"./node_modules/cesium/Build/Cesium/Assets/**/*\" ./lib/public/cesium/Assets/ && cpx \"./node_modules/cesium/Build/Cesium/Widgets/**/*\" ./lib/public/cesium/Widgets/",
    "build": "npm run -s build:cjs && npm run -s build:esm && npm run -s copy:cesium-assets",
    "build:cjs": "internal-tools build-cjs",
    "build:esm": "tsc 1>&2 --outDir lib/esm",
    "clean": "rimraf -g lib .rush/temp/package-deps*.json",
    "cover": "npm -s test",
    "docs": "",
    "extract-api": "betools extract-api --entry=cesium-renderer",
    "lint": "eslint \"./src/**/*.ts\" 1>&2",
    "lint-fix": "eslint --fix -f visualstudio \"./src/**/*.ts\" 1>&2",
    "lint-deprecation": "eslint --fix -f visualstudio --no-inline-config -c ../../common/config/eslint/eslint.config.deprecation-policy.js \"./src/**/*.ts\"",
    "test": "vitest --run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/itwinjs-core.git",
    "directory": "extensions/cesium-renderer"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel",
    "Cesium"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "peerDependencies": {
    "@itwin/core-common": "workspace:*",
    "@itwin/core-geometry": "workspace:*",
    "@itwin/core-frontend": "workspace:*",
    "@itwin/core-bentley": "workspace:*"
  },
  "devDependencies": {
    "@itwin/build-tools": "workspace:*",
    "@itwin/core-common": "workspace:*",
    "@itwin/core-geometry": "workspace:*",
    "@itwin/core-frontend": "workspace:*",
    "@itwin/core-bentley": "workspace:*",
    "@itwin/eslint-plugin": "5.2.2-dev.2",
    "@types/node": "~20.17.0",
    "@vitest/browser": "^3.0.6",
    "cpx2": "^8.0.0",
    "eslint": "^9.31.0",
    "internal-tools": "workspace:*",
    "playwright": "~1.47.1",
    "rimraf": "^6.0.1",
    "typescript": "~5.6.2",
    "vitest": "^3.0.6"
  },
  "dependencies": {
    "cesium": "1.133.0"
  }
}
