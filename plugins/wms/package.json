{
  "name": "wms-plugin-example",
  "version": "1.0.0",
  "description": "Demonstration WMS Server",
  "main": "index.js",
  "scripts": {
    "build": "buildIModelJsModule",
    "clean": "rimraf lib .rush",
    "lint": "tslint -p . 1>&2",
    "test": "",
    "cover": "",
    "docs": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imodeljs/wms-example-plugin.git"
  },
  "keywords": [
    "iModel",
    "BIM",
    "wms",
    "plugin"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imodeljs/wms-example-plugin/issues"
  },
  "homepage": "https://github.com/imodeljs/wms-example-plugin#readme",
  "iModelJs": {
    "buildModule": {
      "type": "plugin",
      "sourceResources": [
        {
          "source": "./src/public/**/*",
          "dest": "./lib/build"
        }
      ],
      "webpack": {
        "build": "./lib/build",
        "dest": "./lib/plugin",
        "entry": "./lib/wmsPlugin.js",
        "bundleName": "wmsPlugin"
      },
      "pseudoLocalize": {
        "source": "./lib/build/locales/en",
        "dest": "./lib/build/locales/en-PSEUDO"
      },
      "installTo": [
        "../../test-apps/ui-test-app",
        "../../test-apps/display-test-app"
      ]
    }
  },
  "devDependencies": {
    "@bentley/build-tools": "1.11.0-dev.3",
    "@bentley/webpack-tools": "1.11.0-dev.3",
    "ui-test-app": "0.0.0",
    "display-test-app": "1.8.0",
    "@types/node": "10.14.1",
    "rimraf": "^2.6.2",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.11.0",
    "tslint-etc": "^1.5.2",
    "typescript": "~3.6.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "1.11.0-dev.3",
    "@bentley/geometry-core": "1.11.0-dev.3",
    "@bentley/imodeljs-clients": "1.11.0-dev.3",
    "@bentley/imodeljs-common": "1.11.0-dev.3",
    "@bentley/imodeljs-i18n": "1.11.0-dev.3",
    "@bentley/imodeljs-frontend": "1.11.0-dev.3",
    "@bentley/imodeljs-quantity": "1.11.0-dev.3"
  }
}
