{
  "name": "iot-demo",
  "version": "1.0.0",
  "description": "IoT Demonstration",
  "main": "index.js",
  "scripts": {
    "build": "buildIModelJsModule",
    "clean": "rimraf lib",
    "lint": "tslint -p . 1>&2",
    "test": "",
    "cover": "",
    "docs": ""
  },
  "keywords": [
    "iModel",
    "BIM",
    "iot",
    "plugin"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "iModelJs": {
    "buildModule": {
      "type": "plugin",
      "sourceResources": [
        {
          "source": "./src/**/*.scss",
          "dest": "./lib"
        },
        {
          "source": "./src/**/*.svg",
          "dest": "./lib"
        },
        {
          "source": "./src/public/**/*",
          "dest": "./lib/build"
        },
        {
          "source": "./src/assets/**/*",
          "dest": "./lib/build/assets"
        }
      ],
      "webpack": {
        "build": "./lib/build",
        "dest": "./lib/plugin",
        "entry": "./lib/iotDemo.js",
        "styleSheets": true,
        "bundleName": "iotDemo"
      },
      "pseudoLocalize": {
        "source": "./lib/build/locales/en",
        "dest": "./lib/build/locales/en-PSEUDO"
      }
    }
  },
  "devDependencies": {
    "@bentley/build-tools": "1.5.0-dev.13",
    "@bentley/webpack-tools": "1.5.0-dev.13",
    "@types/node": "10.14.1",
    "@types/react": "^16.8.0",
    "@types/react-dom": "^16.8.0",
    "@types/react-redux": "^7.0.1",
    "@types/classnames": "^2.2.3",
    "rimraf": "^2.6.2",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.11.0",
    "tslint-etc": "^1.5.2",
    "typescript": "~3.5.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.0",
    "svg-baker-runtime": "^1.4.2"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "1.5.0-dev.13",
    "@bentley/geometry-core": "1.5.0-dev.13",
    "@bentley/imodeljs-clients": "1.5.0-dev.13",
    "@bentley/imodeljs-common": "1.5.0-dev.13",
    "@bentley/imodeljs-i18n": "1.5.0-dev.13",
    "@bentley/imodeljs-frontend": "1.5.0-dev.13",
    "@bentley/imodeljs-quantity": "1.5.0-dev.13",
    "@bentley/ui-components": "1.5.0-dev.13",
    "@bentley/ui-core": "1.5.0-dev.13",
    "@bentley/ui-framework": "1.5.0-dev.13",
    "@bentley/ui-ninezone": "1.5.0-dev.13",
    "classnames": "^2.2.5",
    "react-dom": "^16.8.0",
    "react-redux": "^5.0.7",
    "react": "^16.8.0",
    "redux": "^4.0.3",
    "svg-sprite-loader": "^3.8.0"
  }
}
