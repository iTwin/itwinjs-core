{
  "name": "@bentley/geo-photo-plugin",
  "version": "1.7.0-dev.19",
  "description": "Geotagged Photo Viewer",
  "main": "index.js",
  "scripts": {
    "build": "buildIModelJsModule",
    "clean": "rimraf lib .rush",
    "lint": "tslint -p . 1>&2",
    "webpackTests": "webpack --config ./src/test/webpack.config.js 1>&2",
    "test:integration": "npm run webpackTests && npm run test:integration:chrome && npm run test:integration:electron",
    "test:integration:chrome": "node --max-http-header-size=16000 ./node_modules/@bentley/certa/bin/certa.js -r chrome --grep \"#integration\"",
    "test:integration:electron": "node ./node_modules/@bentley/certa/bin/certa.js -r electron --grep \"#integration\"",
    "test": "",
    "cover": "",
    "docs": ""
  },
  "keywords": [
    "iModel",
    "BIM",
    "plugin",
    "Geotag"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "iModelJs": {
    "buildModule": {
      "type": "plugin",
      "sourceResources": [
        {
          "source": "./src/public/**/*",
          "dest": "./lib/build"
        },
        {
          "source": "./src/public/*.svg",
          "dest": "./lib/public/"
        },
        {
          "source": "./src/pannellum/css/**/*",
          "dest": "./lib/pannellum/css"
        }
      ],
      "webpack": {
        "build": "./lib/build",
        "dest": "./lib/plugin",
        "entry": "./lib/geoPhoto.js",
        "styleSheets": true,
        "bundleName": "geoPhoto"
      },
      "pseudoLocalize": {
        "source": "./lib/build/locales/en",
        "dest": "./lib/build/locales/en-PSEUDO"
      }
    }
  },
  "devDependencies": {
    "@bentley/certa": "1.7.0-dev.19",
    "@bentley/build-tools": "1.7.0-dev.19",
    "@bentley/webpack-tools": "1.7.0-dev.19",
    "@bentley/config-loader": "1.7.0-dev.19",
    "@bentley/express-server": "1.7.0-dev.19",
    "@bentley/imodeljs-backend": "1.7.0-dev.19",
    "@types/node": "10.14.1",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/react": "^16.8.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.11.0",
    "tslint-etc": "^1.5.2",
    "typescript": "~3.6.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.0",
    "source-map-loader": "^0.2.3"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "1.7.0-dev.19",
    "@bentley/geometry-core": "1.7.0-dev.19",
    "@bentley/imodeljs-clients": "1.7.0-dev.19",
    "@bentley/imodeljs-common": "1.7.0-dev.19",
    "@bentley/imodeljs-i18n": "1.7.0-dev.19",
    "@bentley/imodeljs-frontend": "1.7.0-dev.19",
    "@bentley/imodeljs-quantity": "1.7.0-dev.19",
    "@bentley/ui-core": "1.7.0-dev.19",
    "@bentley/ui-components": "1.7.0-dev.19",
    "@bentley/ui-ninezone": "1.7.0-dev.19",
    "@bentley/ui-framework": "1.7.0-dev.19",
    "react": "^16.8.0"
  }
}
