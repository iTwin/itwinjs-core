{
  "name": "@bentley/hypermodeling-plugin",
  "version": "1.8.0-dev.10",
  "description": "Hyper modeling markers",
  "main": "index.js",
  "scripts": {
    "build": "buildIModelJsModule",
    "clean": "rimraf lib .rush",
    "lint": "tslint -p . 1>&2",
    "test": "",
    "cover": "",
    "docs": ""
  },
  "keywords": [
    "iModel",
    "BIM",
    "plugin",
    "HyperModeling"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "iModelJs": {
    "buildModule": {
      "type": "plugin",
      "sourceResources": [
        {
          "source": "./src/public/**/*",
          "dest": "./lib/build"
        }
      ],
      "webpack": {
        "build": "./lib/build",
        "dest": "./lib/plugin",
        "entry": "./lib/HyperModeling.js",
        "bundleName": "hyperModeling"
      },
      "pseudoLocalize": {
        "source": "./lib/build/locales/en",
        "dest": "./lib/build/locales/en-PSEUDO"
      }
    }
  },
  "devDependencies": {
    "@bentley/certa": "1.8.0-dev.10",
    "@bentley/build-tools": "1.8.0-dev.10",
    "@bentley/webpack-tools": "1.8.0-dev.10",
    "@bentley/config-loader": "1.8.0-dev.10",
    "@types/node": "10.14.1",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.11.0",
    "tslint-etc": "^1.5.2",
    "typescript": "~3.6.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.0",
    "source-map-loader": "^0.2.3"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "1.8.0-dev.10",
    "@bentley/geometry-core": "1.8.0-dev.10",
    "@bentley/imodeljs-clients": "1.8.0-dev.10",
    "@bentley/imodeljs-common": "1.8.0-dev.10",
    "@bentley/imodeljs-i18n": "1.8.0-dev.10",
    "@bentley/imodeljs-frontend": "1.8.0-dev.10",
    "@bentley/ui-abstract": "1.8.0-dev.10"
  }
}
