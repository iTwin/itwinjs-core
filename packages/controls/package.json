{
  "name": "@bentley/ecpresentation-controls",
  "version": "0.4.0",
  "description": "Frontend controls based on ECPresentation library",
  "keywords": [
    "Bentley",
    "EC",
    "Presentation",
    "iModelJS",
    "Frontend",
    "React",
    "Controls"
  ],
  "license": "UNLICENSED",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "scripts": {
    "build": "tsc -p ./src && npm run build:assets && npm run build:scss",
    "build:scss": "cpx ./src/**/*.scss ./lib",
    "build:assets": "cpx ./public/**/* ./lib/public && npm run pseudolocalize",
    "clean": "rimraf lib package-deps.json",
    "cover": "cross-env TS_NODE_PROJECT=./tests nyc npm test -- --coverage",
    "docs": "npm run docs:reference && npm run docs:changelog",
    "docs:changelog": "node ../../scripts/copy-changelog.js --changelog ./CHANGELOG.md --name ecpresentation-controls",
    "docs:reference": "node ./node_modules/@bentley/bentleyjs-tools/scripts/docs.js --source=./src --includes=../../out/docs/extract --json=../../out/docs/reference/ecpresentation-controls/file.json --onlyJson %TYPEDOC_THEME%",
    "extract": "node ./node_modules/@bentley/bentleyjs-tools/scripts/extract.js --fileExt=ts --extractFrom=./tests --recursive --out=../../out/docs/extract",
    "lint": "tslint -p ./src",
    "pack": "node ../../scripts/pack.js",
    "pseudolocalize": "node ./node_modules/@bentley/bentleyjs-tools/scripts/pseudolocalize.js --englishDir ./public/locales/en --out ./lib/public/locales/en-pseudo",
    "test": "node ../../scripts/run-tests.js --testsDir ./tests --react",
    "test-cover": "cross-env TS_NODE_PROJECT=./tests nyc npm test -- --coverage --report",
    "watch": "npm test -- --watch"
  },
  "dependencies": {
    "lodash": "^4.14.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "peerDependencies": {
    "@bentley/bentleyjs-core": "0.98.0-4",
    "@bentley/imodeljs-i18n": "0.98.0-4",
    "@bentley/imodeljs-common": "0.98.0-4",
    "@bentley/imodeljs-frontend": "0.98.0-4",
    "@bentley/ecpresentation-common": "^0.4.1",
    "@bentley/ecpresentation-frontend": "^0.4.1",
    "@bentley/ui-core": "^0.1.15",
    "@bentley/ui-components": "^0.3.10"
  },
  "devDependencies": {
    "@bentley/bentleyjs-core": "0.98.0-4",
    "@bentley/bentleyjs-tools": "0.98.0-4",
    "@bentley/imodeljs-i18n": "0.98.0-4",
    "@bentley/imodeljs-common": "0.98.0-4",
    "@bentley/imodeljs-frontend": "0.98.0-4",
    "@bentley/ecpresentation-common": "^0.4.1",
    "@bentley/ecpresentation-frontend": "^0.4.1",
    "@bentley/ui-core": "^0.1.15",
    "@bentley/ui-components": "^0.3.10",
    "@types/chai": "^4.0.10",
    "@types/chai-as-promised": "^7",
    "@types/chai-jest-snapshot": "^1.3.0",
    "@types/chai-spies": "^0",
    "@types/enzyme": "^3.1",
    "@types/faker": "^4.1.0",
    "@types/lodash": "^4.14.0",
    "@types/mocha": "^2.2.44",
    "@types/react": "^16.0.31",
    "@types/react-dom": "^16.0.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "chai-jest-snapshot": "^1.3.0",
    "chai-spies": "1.0.0",
    "cpx": "^1.5",
    "cross-env": "^5.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "faker": "^4.1.0",
    "gl": "^4",
    "mocha": "^5.1.1",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.0",
    "typedoc": "^0.11.1",
    "typedoc-plugin-external-module-name": "^1.1.1",
    "typemoq": "^2.1.0",
    "typescript": "^2.8.3",
    "xmlhttprequest": "^1.8.0"
  },
  "nyc": {
    "nycrc-path": "../../.nycrc",
    "temp-directory": "../../out/reports/coverage/controls/.nyc_output",
    "report-dir": "../../out/reports/coverage/controls"
  }
}
