{
  "name": "integration-tests",
  "version": "0.0.0",
  "description": "ECPresentation integration tests",
  "license": "UNLICENSED",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "private": true,
  "scripts": {
    "build": "",
    "clean": "rimraf lib",
    "cover": "nyc npm test -- --coverage",
    "extract": "node ../../node_modules/@bentley/bentleyjs-tools/scripts/extract.js --fileExt=ts --extractFrom=./src --recursive --out=../../out/docs/extract",
    "lint": "tslint ./",
    "test": "node ../../scripts/run-tests.js --testsDir ./",
    "test+cover": "nyc npm test -- --coverage --report",
    "validatePackageJson": "validjson ./package.json",
    "watch": "npm test -- --watch"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "^8",
    "@bentley/geometry-core": "^9",
    "@bentley/imodeljs-i18n": "^0.0.1",
    "@bentley/imodeljs-clients": "^6",
    "@bentley/imodeljs-common": "^0.95",
    "@bentley/imodeljs-backend": "^0.97",
    "@bentley/imodeljs-frontend": "^0.96.4",
    "@bentley/ecpresentation-common": "^0.4.1",
    "@bentley/ecpresentation-backend": "^0.4.1",
    "@bentley/ecpresentation-frontend": "^0.4.1",
    "@bentley/ecpresentation-controls": "^0.4.0",
    "@bentley/ui-core": "^0.1.11",
    "@bentley/ui-components": "^0.3.5",
    "@types/cpx": "1.5",
    "cpx": "^1.5"
  },
  "devDependencies": {
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.0",
    "typescript": "^2.8.3",
    "valid-json-cli": "^1.3.0"
  },
  "nyc": {
    "nycrc-path": "../../.nycrc",
    "report-dir": "../out/reports/coverage/integration",
    "temp-directory": "../out/reports/coverage/integration/.nyc_output",
    "cwd": "../",
    "include": [
      "common/lib/**/*.js",
      "backend/lib/**/*.js",
      "frontend/lib/**/*.js",
      "controls/lib/**/*.js"
    ],
    "extension": [
      ".js"
    ],
    "all": false
  }
}
