{
  "$schema": "../../../common/lib/ruleset.schema.json",
  "id": "getNodePaths",
  "rules": [{
    "ruleType": "RootNodes",
    "specifications": [{
      "specType": "InstanceNodesOfSpecificClasses",
      "classes": [{"schemaName": "BisCore", "classNames": ["RepositoryModel"]}],
      "groupByClass": false,
      "nestedRules": [{
        "ruleType": "ChildNodes",
        "specifications": [{
          "specType": "RelatedInstanceNodes",
          "relatedClasses": {"schemaName": "BisCore", "classNames": ["Subject"]},
          "relationships": {"schemaName": "BisCore", "classNames": ["ModelContainsElements"]},
          "requiredDirection": "Forward",
          "groupByClass": false,
          "groupByLabel": false,
          "nestedRules": [{
            "ruleType": "ChildNodes",
            "specifications": [{
              "specType": "RelatedInstanceNodes",
              "relationships": {"schemaName": "BisCore", "classNames": ["ElementOwnsChildElements"]},
              "requiredDirection": "Forward",
              "groupByClass": true,
              "groupByLabel": false
            }]
          }]
        }]
      }]
    }]
  }]
}
