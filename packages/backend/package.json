{
  "name": "@bentley/ecpresentation-backend",
  "version": "0.4.1",
  "description": "Backend of ECPresentation library",
  "keywords": [
    "Bentley",
    "EC",
    "Presentation",
    "iModelJS",
    "Backend"
  ],
  "license": "UNLICENSED",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/index.js",
  "typings": "lib/index",
  "scripts": {
    "build": "tsc -p ./src && npm run build:assets",
    "build:assets": "cpx ./assets/**/* ./lib/assets && npm run pseudolocalize",
    "clean": "rimraf lib package-deps.json",
    "cover": "cross-env TS_NODE_PROJECT=./tests nyc npm test -- --coverage",
    "docs": "npm run docs:reference && npm run docs:changelog",
    "docs:changelog": "node ../../scripts/copy-changelog.js --changelog ./CHANGELOG.md --name ecpresentation-backend",
    "docs:reference": "node ../../node_modules/@bentley/bentleyjs-tools/scripts/docs.js --source=./src --includes=../../out/docs/extract --json=../../out/docs/reference/ecpresentation-backend/file.json --tsIndexFile=index.ts --onlyJson %TYPEDOC_THEME%",
    "extract": "node ../../node_modules/@bentley/bentleyjs-tools/scripts/extract.js --fileExt=ts --extractFrom=./tests --recursive --out=../../out/docs/extract",
    "lint": "tslint -p ./src",
    "pack": "node ../../scripts/pack.js",
    "pseudolocalize": "node ../../node_modules/@bentley/bentleyjs-tools/scripts/pseudolocalize.js --englishDir ./assets/locales/en --out ./lib/assets/locales/en-pseudo",
    "test": "node ../../scripts/run-tests.js --testsDir ./tests",
    "test+cover": "cross-env TS_NODE_PROJECT=./tests nyc npm test -- --coverage --report",
    "validatePackageJson": "validjson ./package.json",
    "watch": "npm test -- --watch"
  },
  "peerDependencies": {
    "@bentley/bentleyjs-core": "^8",
    "@bentley/imodeljs-common": "^0.95",
    "@bentley/imodeljs-backend": "^0.97",
    "@bentley/ecpresentation-common": "^0.4.1"
  },
  "devDependencies": {
    "@bentley/bentleyjs-core": "^8",
    "@bentley/imodeljs-common": "^0.95",
    "@bentley/imodeljs-backend": "^0.97",
    "@bentley/ecpresentation-common": "^0.4.1",
    "cpx": "^1.5",
    "cross-env": "^5.1.0",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3",
    "valid-json-cli": "^1.3.0"
  },
  "nyc": {
    "nycrc-path": "../../.nycrc",
    "temp-directory": "../../out/reports/coverage/backend/.nyc_output",
    "report-dir": "../../out/reports/coverage/backend"
  }
}
