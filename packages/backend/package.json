{
  "name": "@bentley/presentation-backend",
  "version": "0.5.1",
  "description": "Backend of iModelJs Presentation library",
  "keywords": [
    "Bentley",
    "EC",
    "Presentation",
    "iModelJS",
    "Backend"
  ],
  "license": "UNLICENSED",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/index.js",
  "typings": "lib/index",
  "scripts": {
    "build": "tsc -p ./src && npm run build:assets",
    "build:assets": "cpx ./assets/**/* ./lib/assets && npm run pseudolocalize",
    "clean": "rimraf lib package-deps.json",
    "cover": "cross-env TS_NODE_PROJECT=./tests/tsconfig.json nyc npm test -- --reporter mocha-tldr-reporter",
    "docs": "npm run docs:reference && npm run docs:changelog",
    "docs:changelog": "node ../../scripts/copy-changelog.js --changelog ./CHANGELOG.md --name presentation-backend",
    "docs:reference": "node ./node_modules/@bentley/bentleyjs-tools/scripts/docs.js --source=./src --includes=../../out/docs/extract --json=../../out/docs/reference/presentation-backend/file.json --tsIndexFile=index.ts --onlyJson %TYPEDOC_THEME%",
    "extract": "node ./node_modules/@bentley/bentleyjs-tools/scripts/extract.js --fileExt=ts --extractFrom=./tests --recursive --out=../../out/docs/extract",
    "lint": "tslint -p ./src",
    "pack": "node ../../scripts/pack.js",
    "pseudolocalize": "node ./node_modules/@bentley/bentleyjs-tools/scripts/pseudolocalize.js --englishDir ./assets/locales/en --out ./lib/assets/locales/en-pseudo",
    "test": "cross-env TS_NODE_PROJECT=./tests/tsconfig.json mocha -r ts-node/register -r tsconfig-paths/register -r source-map-support/register --check-leaks --full-trace --file ./tests/index.test.ts tests/**/*.ts",
    "test-cover": "cross-env TS_NODE_PROJECT=./tests/tsconfig.json nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=../../out/reports/tests/results.backend.xml",
    "watch": "npm test -- --reporter min --watch-extensions ts --watch"
  },
  "peerDependencies": {
    "@bentley/bentleyjs-core": "~0.112.0",
    "@bentley/imodeljs-common": "~0.112.0",
    "@bentley/imodeljs-backend": "~0.112.0",
    "@bentley/presentation-common": "^0.5.1"
  },
  "devDependencies": {
    "@bentley/bentleyjs-core": "~0.112.0",
    "@bentley/bentleyjs-tools": "~0.112.0",
    "@bentley/imodeljs-common": "~0.112.0",
    "@bentley/imodeljs-backend": "~0.112.0",
    "@bentley/presentation-common": "^0.5.1",
    "@types/chai": "^4.0.10",
    "@types/chai-as-promised": "^7",
    "@types/chai-jest-snapshot": "^1.3.0",
    "@types/chai-spies": "^0",
    "@types/deep-equal": "^1",
    "@types/faker": "^4.1.0",
    "@types/lolex": "^2.1.2",
    "@types/mocha": "^2.2.44",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "chai-jest-snapshot": "^1.3.0",
    "chai-spies": "1.0.0",
    "cpx": "^1.5",
    "cross-env": "^5.1.0",
    "deep-equal": "^1",
    "faker": "^4.1.0",
    "lolex": "^2.7.1",
    "mocha": "^5.1.1",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^3.3.1",
    "tslint": "^5.9.0",
    "typedoc": "^0.11.1",
    "typedoc-plugin-external-module-name": "^1.1.1",
    "typemoq": "^2.1.0",
    "typescript": "^2.8.3"
  },
  "nyc": {
    "nycrc-path": "../../.nycrc",
    "temp-directory": "../../out/reports/coverage/backend/.nyc_output",
    "report-dir": "../../out/reports/coverage/backend"
  }
}
